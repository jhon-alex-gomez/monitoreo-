const express = require('express');
const app = express();

// Define la ruta principal del dashboard
app.get('/', (req, res) => {
  // Datos de ejemplo para las grÃ¡ficas
  const data1 = [10, 20, 30, 40, 50];
  const data2 = [50, 40, 30, 20, 10];
  const labels = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo'];

  // Renderiza la plantilla del dashboard
  res.render('dashboard', { data1, data2, labels });
});

// Configura el motor de plantillas
app.set('view engine', 'ejs');
app.set('views', __dirname + '/views');

