<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Ingrese los datos del sensor a registrar</h3>
    </div>
    <div class="card-body">
      <form action="/interfaz/new-sensor" method="POST" id="sensorForm">
        <div class="form-group">
          <input type="text" name="name" class="form-control" placeholder="Admin del sensor" autofocus />
        </div>
        <div class="form-group">
          <input type="text" name="ubicacion" class="form-control" placeholder="Ubicacion" />
        </div>
        <div class="form-group">
          <label for="numero_sensores">Seleccione el número de sensores:</label>
          <select name="numero_sensores" class="form-control" id="numero_sensores" onchange="mostrarSensoresAdicionales()">
            <option value="0">Seleccione</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <!-- Agrega más opciones si es necesario -->
          </select>
        </div>

        <!-- Div para agregar selecciones de sensores -->
        <div id="sensores-adicionales"></div>

        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function mostrarSensoresAdicionales() {
    const selectElement = document.getElementById("numero_sensores");
    const sensoresAdicionalesDiv = document.getElementById("sensores-adicionales");
    sensoresAdicionalesDiv.innerHTML = ""; // Limpiar contenido previo

    const numeroSensores = parseInt(selectElement.value, 10);

    for (let i = 1; i <= numeroSensores; i++) {
      const divSensor = document.createElement("div");
      divSensor.className = "form-group";
      divSensor.innerHTML = `
        <label for="sensor_${i}">Sensor ${i}:</label>
        <select name="sensor_${i}" class="form-control">
          <option value="Temperatura">Temperatura</option>
          <option value="Humedad">Humedad</option>
          <option value="Voltaje">Voltaje</option>
          <option value="Corriente">Corriente</option>
          <!-- Agrega más opciones si es necesario -->
        </select>
      `;
      sensoresAdicionalesDiv.appendChild(divSensor);
    }
  }
</script>
